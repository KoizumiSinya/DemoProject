<jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout
    android:id="@+id/refresh_scrollview_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head"/>
    <!-- 支持所有实现Pullable接口的View -->

    <jp.sinya.refreshlibrary.pullableview.PullableScrollView
        android:id="@+id/refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/refresh_scrollview_containe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            </LinearLayout>
        </RelativeLayout>
    </jp.sinya.refreshlibrary.pullableview.PullableScrollView>

    <include layout="@layout/refresh_load_more"/>

</jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout>