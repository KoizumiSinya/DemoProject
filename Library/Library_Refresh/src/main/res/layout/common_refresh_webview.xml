<jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout
    android:id="@+id/refresh_webview_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head"/>
    <!-- 支持所有实现Pullable接口的View -->

    <jp.sinya.refreshlibrary.pullableview.PullableWebView
        android:id="@+id/refresh_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/refresh_load_more"/>

</jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout>