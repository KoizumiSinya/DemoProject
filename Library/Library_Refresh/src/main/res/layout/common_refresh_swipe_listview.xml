<?xml version="1.0" encoding="utf-8"?>
<jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout
    android:id="@+id/refresh_swipe_listview_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head"/>
    <!-- 支持所有实现Pullable接口的View -->

    <jp.sinya.refreshlibrary.pullableview.PullableSwipeListView
        android:id="@+id/refresh_swipe_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EFF5"
        android:divider="#F0EFF5"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"/>

    <include layout="@layout/refresh_load_more"/>
</jp.sinya.refreshlibrary.pullableview.PullToRefreshLayout>
