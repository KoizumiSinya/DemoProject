<?xml version="1.0" encoding="utf-8"?>
<jp.sinya.refreshframework.stickyexpandlistview.ScrollLinerLayout
    android:id="@+id/delete_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg_selector"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/friend_front"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:tag="front">

        <ImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/contact_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#eee"
        android:gravity="right"
        android:tag="back">

        <TextView
            android:id="@+id/delete_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#ff151f"
            android:gravity="center"
            android:padding="20dp"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </RelativeLayout>

</jp.sinya.refreshframework.stickyexpandlistview.ScrollLinerLayout>