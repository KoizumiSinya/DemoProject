<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jp.sinya.transition">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".demo.sample.image.ImageActivity"/>
        <activity android:name=".demo.sample.image.ImageDetailActivity"/>
        <activity android:name=".demo.sample.recyclerview.RvActivity"

            />
        <activity android:name=".demo.sample.recyclerview.RvDetailActivity"/>
        <activity
            android:name=".demo.sample.fab.FabActivity"
            android:theme="@style/ColorStyle"/>
        <activity
            android:name=".demo.sample.fab.FabCircleActivity"
            android:theme="@style/ColorStyle"/>
        <activity
            android:name=".demo.sample.fab.FabNoCircleActivity"
            android:theme="@style/ColorStyle"/>
        <activity android:name=".demo.sample.fragment.FActivity"/>
        <activity android:name=".demo.sample.fragment.FDetailActivity"/>
        <activity android:name=".demo.sample.fab.ButtonActivity"/>
        <activity android:name=".demo.sample.intent.IntentDetailActivity"/>
        <activity android:name=".demo.sample.intent.IntentActivity"/>
        <activity android:name=".demo.sample.intent.ForResultActivity"/>
        <activity android:name=".demo.sample.intent.ForResultDetailActivity"/>

    </application>


</manifest>