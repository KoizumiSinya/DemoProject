<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_common_select_wheel_layout_ll_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center|bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_select_wheel_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/view_common_select_wheel_layout_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="#aaa"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/view_common_select_wheel_layout_btn_ok"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="确认"
                android:textColor="#0048FC"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/view_common_select_wheel_layout_btn_cancel"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="#0048FC"
                android:textSize="16sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#aaa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <jp.sinya.commonselectwheeldialog.widget.WheelView
                android:id="@+id/view_common_select_wheel_dialog_item_wheel_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="gone"/>

            <jp.sinya.commonselectwheeldialog.widget.WheelView
                android:id="@+id/view_common_select_wheel_dialog_item_wheel_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:visibility="gone"/>

            <jp.sinya.commonselectwheeldialog.widget.WheelView
                android:id="@+id/view_common_select_wheel_dialog_item_wheel_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:visibility="gone"/>

            <jp.sinya.commonselectwheeldialog.widget.WheelView
                android:id="@+id/view_common_select_wheel_dialog_item_wheel_4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:visibility="gone"/>

            <jp.sinya.commonselectwheeldialog.widget.WheelView
                android:id="@+id/view_common_select_wheel_dialog_item_wheel_5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>