<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  -->
    <style name="WheelDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 从下往上进入； 从上往下退出 动画-->
    <style name="dialg_wheel_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/anim_dialog_bottom_to_top_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_dialog_bottom_to_top_out</item>
    </style>
</resources>
