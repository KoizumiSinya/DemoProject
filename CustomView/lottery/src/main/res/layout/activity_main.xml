<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#999"
        android:orientation="vertical"
        android:padding="30dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/card1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片1"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/card1">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片2"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card3"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/card2">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片3"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/card4"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/card5">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片4"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/card5"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/card6">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片5"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/card6"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@id/face_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/face_view_bg"
                    android:gravity="center"
                    android:text="卡片6"
                    android:textColor="#ffffff"
                    android:textSize="26sp"/>

                <ImageView
                    android:id="@id/back_view"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_view_bg"
                    android:padding="5dp"
                    android:src="@mipmap/icon"
                    android:visibility="invisible"/>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:onClick="start"
        android:text="启动"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:onClick="reset"
        android:text="重置"/>
</LinearLayout>