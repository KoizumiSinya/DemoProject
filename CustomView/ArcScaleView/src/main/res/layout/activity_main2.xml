<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              tools:context=".MainActivity">

    <jp.sinya.arcscaleview.ArcScaleView
        android:id="@+id/arc_scaleview"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:background="#eee"
        android:rotation="180"
        app:arcLineColor="#ff0000"
        app:drawLineSpace="1"
        app:drawTextSpace="2"
        app:everyScaleValue="1"
        app:indicatorColor="#1cffaf"
        app:scaleLineColor="#0000ff"
        app:scaleMin="-5000"
        app:scaleNum="20"
        app:scaleSpace="1"
        app:scaleTextColor="#0000ff"
        app:selectTextColor="#111111"/>

</LinearLayout>
