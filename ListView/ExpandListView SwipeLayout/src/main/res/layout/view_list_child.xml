<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.sinya.demo_expandlistswipelayout.widget.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:focusableInTouchMode="false"
                    android:src="@mipmap/default_icon"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@+id/iv_img"
                    android:layout_toRightOf="@+id/iv_img"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="公司名称"
                    android:textColor="#605f5f"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_img"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_alignStart="@+id/tv_name"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="部门路径"
                    android:textColor="#9da0a3"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/delete_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#ff0000"
                android:clickable="true">

                <View
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/trash"/>
            </RelativeLayout>

            <!--<RelativeLayout
                android:id="@+id/view_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#c2c2c2"
                android:clickable="true">

                <View
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/magnifier"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/star_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#aaffff"
                android:clickable="true">

                <View
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/star"/>
            </RelativeLayout>-->
        </LinearLayout>
    </com.sinya.demo_expandlistswipelayout.widget.SwipeLayout>
</LinearLayout>