<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.sinya.seekbar.MainActivity">

    <jp.sinya.seekbar.widget.RangeSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rsb:absoluteMaxValue="100"
        rsb:absoluteMinValue="0"
        rsb:activeColor="#81DF80"
        rsb:barHeight="2dp"
        rsb:showLabels="false"
        rsb:singleThumb="true"
        rsb:textAboveThumbsColor="#81DF80"
        rsb:thumbDisabled="@mipmap/seekbar_point"
        rsb:thumbNormal="@mipmap/seekbar_point"
        rsb:thumbPressed="@mipmap/seekbar_point"
        rsb:valuesAboveThumbs="true"/>

</RelativeLayout>
